{
    "manifest_version":3,
    "name":"Youtube Summary Giver",
    "description":"An extension for lazy people who don't want to watch videos and for people who are really imaptient ;)",
    "version":"1.0",
    "permissions":["activeTab", "declarativeContent"],
    "host_permissions":["http://127.0.0.1:5000/*"],

    "action":{
        "default_title":"Summary of video",
        "default_icon": {
            "16":"images/YTS.png",
            "32":"images/YTS.png",
            "48":"images/YTS.png",
            "128":"images/YTS.png"
        },
        "default_popup":"popup.html"
    },
    "icons": {
        "16":"images/YTS.png",
        "32":"images/YTS.png",
        "48":"images/YTS.png",
        "128":"images/YTS.png"
    }
}